# EditorConfig helps maintain consistent coding styles.

# Top-most EditorConfig file
root = true

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.toml]
indent_style = space
indent_size = 2
insert_final_newline = true
